{
  "swagger": "2.0",
  "info": {
    "title": "Shoutem API",
    "version": "1.0.0",
    "description": "API documentation of Shoutem services: `Extension Manager`, `Application Manager` and `Authentication service`.",
    "contact": {
      "email": "tomislav.tenodi@shoutem.com"
    }
  },
  "parameters": {},
  "responses": {},
  "produces": [
    "application/vnd.api+json"
  ],
  "securityDefinitions": {},
  "security": [
    "jwt"
  ],
  "tags": [
    {
      "name": "Application",
      "description": "Application manager service API"
    },
    {
      "name": "Extension",
      "description": "Extension manager service API"
    }
  ],
  "paths": {
    "/v1/extensions": {
      "post": {
        "x-access": "public",
        "tags": [
          "Extension"
        ],
        "summary": "Create new extension",
        "consumes": [
          "application/zip"
        ],
        "responses": {
          "201": {
            "description": "an extension to be returned",
            "headers": {
              "Location": {
                "type": "string",
                "format": "uri"
              }
            },
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/Extension",
                  "description": "Extension that is created"
                }
              }
            }
          }
        }
      },
      "get": {
        "x-access": "public",
        "x-status": "outdated",
        "tags": [
          "Extension"
        ],
        "summary": "Get list of extensions",
        "parameters": [
          {
            "$req": "#/parameters/filterid"
          }
        ],
        "responses": {
          "200": {
            "description": "list of matched extensions",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/Extension"
                }
              }
            }
          }
        }
      }
    },
    "/v1/extensions/{id}": {
      "get": {
        "tags": [
          "Extension"
        ],
        "summary": "Get extension of id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "extension id"
          }
        ],
        "responses": {
          "200": {
            "description": "matched extension",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/Extension"
                }
              }
            }
          },
          "404": {
            "description": "no matched extension"
          }
        }
      }
    },
    "/v1/applications": {
      "post": {
        "x-access": "public",
        "x-status": "current",
        "tags": [
          "Application"
        ],
        "summary": "Create application",
        "consumes": [
          "application/zip"
        ],
        "responses": {
          "201": {
            "description": "an extension to be returned",
            "headers": {
              "Location": {
                "type": "string",
                "format": "uri"
              }
            },
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/Extension",
                  "description": "Extension that is created"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "JSONAPIRelationshipObject": {
      "type": "object",
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "Extension": {
      "type": "object",
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^shoutem.core.extensions$"
        },
        "id": {
          "type": "string"
        },
        "attributes": {
          "type": "object"
        },
        "relationships": {
          "type": "object",
          "required": [
            "author"
          ],
          "properties": {
            "author": {
              "$ref": "#/definitions/JSONAPIRelationshipObject",
              "description": "Author of the extension"
            },
            "screens": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/JSONAPIRelationshipObject"
              },
              "description": "Extensions screens"
            },
            "shortcuts": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/JSONAPIRelationshipObject"
              },
              "description": "Extensions shortcuts"
            },
            "settingsPage": {
              "$ref": "#/definitions/JSONAPIRelationshipObject",
              "description": "Settings page for builder of the extension"
            }
          }
        }
      }
    }
  }
}